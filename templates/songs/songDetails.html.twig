{% extends 'base.html.twig' %}

{% block title %}My Tunes Lib - Détails
{% endblock %}

{% block body %}
	<a onclick="history.go(-1)" class="back-button">⬅️ Retour</a>
	{% if app.session.get('user') %}
		{% if app.session.get('user')['role'][0] == 'ADMIN' %}
			<a href="/editSong/{{song.id}}" class="back-button">✏️ Modifier</a>
			<a onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce titre ? (cette action est irréversible)')){
				window.location='/deleteSong/{{song.id}}'}" class="back-button">🗑️ Supprimer</a>
		{% elseif app.session.get('user')['role'][0] == 'USER' %}
			<a href="/addToLibrary/{{song.id}}" class="back-button">📼 Ajouter à ma playlist</a>
		{% endif %}
	{% endif %}
	<h2>Détails :</h2>
	<div class="song-details">
		{% if song.getUrlCover() %}
			<img src="{{song.getUrlCover()}}" height="300px" width="300px">
		{% else %}
			<img src="{{asset('default_cover.png')}}" height="300px" width="300px">
		{% endif %}
		<div class="infos">
			<h3>
				{% for artist in song.artists.getValues() %}
					{% if loop.index > 1 %},
					{% endif %}
					{{ artist.name }}
				{% endfor %}
			</h3>
			<h2>{{ song.title }}</h2>

			<div class="blocs">
				<div class="info-bloc">
					<p>Genre</p>
					{{ song.genre.value }}
				</div>
				<div class="info-bloc">
					<p>Durée</p>
					{{ utilsService.formatDurationToMinutesSeconds(song.duration) }}
				</div>
				<div class="info-bloc">
					<p>Date de sortie</p>
					{{ song.getReleaseDate().format('d M Y') }}
				</div>
			</div>
		</div>
	</div>
	{% if song.getYtbLink() %}
		<div class="ytb-integration">
			<iframe width="640" height="360" src="{{song.getYtbLink()}}"></iframe>
		</div>
	{% endif %}
{% endblock %}
